extends ../common/templates/layout.pug

block prepend content
  - var title = "ts status"
  - var subtitle = "-"
  - var text = "users online"

block scripts 
  script(
      src="ts-status.ts"
      type="module"
  )
  link(
    rel="manifest"
    href="manifest.webmanifest"
  )

block append subcontainer
  p.hint connect via 0x29a.me:4711
  
block append text
  button#connectButton.btn.btn-transform.btn-anim-staggering(type="button" title="connect")
    i.fa-solid.fa-microphone
  button#refreshButton.btn.btn-transform.btn-anim-staggering(type="button" title="refresh")
    i.fa-solid.fa-refresh
  button#copyButton.btn.btn-transform.btn-anim-staggering(type="button" title="copy")
    i.fa-regular.fa-copy
  button#listButton.btn.btn-transform.btn-anim-staggering(type="button" title="userlist")
    i.fa-solid.fa-list
    
block append content 
  #modalBackdrop.modal-backdrop
    .modal
      .modal-header
        h2 userlist
        button.btn.modal-close#modalClose(type="button" title="close modal")
          i.fa-solid.fa-xmark
      .modal-body
        ul.player-list