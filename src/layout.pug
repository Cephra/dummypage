doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width,initial-scale=1,user-scalable=0,shrink-to-fit=no" 
      name="viewport"
      )
    if title
      meta(
        name="description"
        content=title+" | 0x29a.me"
      )
      title #{title} | 0x29a.me
    else 
      meta(
        name="description"
        content="0x29a.me"
      )
      title 0x29a.me
    link(
      rel="icon"
      href="https://www.0x29a.me/favicon.ico"
    )
    link(
      href="/src/common/styles/styles.scss" 
      rel="stylesheet"
      )
    block scripts
      script(
        src="/src/common/scripts/main.ts"
        type="module"
      )
  body
    block content
      .container
        .text
          block text
            .textcontainer
              h1 #{subtitle}
            .subcontainer
              block subcontainer
                p #{text}
                if hint
                  p.hint #{hint}
