doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width,initial-scale=1,user-scalable=0,shrink-to-fit=no" 
      name="viewport"
      )
    if title
      meta(
        name="description"
        content=title+" | 0x29a.me"
      )
      title #{title} | 0x29a.me
    else 
      meta(
        name="description"
        content="0x29a.me"
      )
      title 0x29a.me
    link(
      href="styles.css" 
      rel="stylesheet"
      )
    script(
      src="app.js" 
      type="module"
    )
  body
    .container
      .text
        h1 #{subtitle}
        .line
        p #{text}