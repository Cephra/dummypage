extends ../layout.pug

block prepend content
  - var title = "ts status"
  - var subtitle = "-"
  - var text = "clients in teamspeak"

block scripts 
  script(
      src="/src/js/ts-status.js"
      type="module"
  )

block append subcontainer
  p.hint connect via 0x29a.me:25565
  
block append text
  a.btn(href="ts3server://0x29a.me:25565")
    i.fa-solid.fa-microphone
  a.btn(href="#" id="refreshButton")
    i.fa-solid.fa-refresh
  a.btn(href="#" id="copyButton")
    i.fa-regular.fa-copy
  a.btn(href="#" id="listButton")
    i.fa-solid.fa-list
    
block append content 
  #modalBackdrop.modal-backdrop
    .modal
      .modal-header
        h2 clientlist
      .modal-body
        ul.player-list